#:kivy 2.3.1

<MainWidget>:
    orientation: 'vertical'
    canvas:
        Color:
            rgb: 0.3,0.3,0.3
        Rectangle:
            size: self.size
    BoxLayout:
        orientation:'horizontal'
        size_hint: (1,0.1)
        spacing: 10
        Label:
            text: 'SUPERVISÓRIO REFRIGERAÇÃO'
            size_hint_x: None
            width: 400        
        BoxLayout:
            orientation:'vertical'
            size_hint_x: None
            width: 500
            Label:
                text:'CONFIGURAÇÕES'
            BoxLayout:
                orientation:'horizontal'
                Button:
                    text:'MODBUS'
                    on_release: root._modbusPopup.open()
                Button:
                    text: 'ScanTime'
                    on_release: root._scanPopup.open()


        Image:
            id: img_con
            size_hint_x: None
            width: 100
            source: 'imgs/desconectado.png'
            pos_hint: {'top':1, 'right':1}

    FloatLayout:
        canvas:
            Color:
                rgb: 0.95,0.95,0.95
            Rectangle:
                size: self.size
        Image:
            source: 'imgs/Planta.png'
        Label:
            id: lb_tempcarc
            size_hint: (None,None)
            size: (termometro.size[0]*0.25,termometro.size[1])
            pos_hint: {'x': 0.042,'y': 0.714}
            canvas:
                Color:
                    rgb: 1,0,0
                Rectangle:
                    size: self.size
                    pos: (85.042,498.714)
        Image:
            id: termometro
            source: 'imgs/termometro.png'
            size_hint: 0.11,0.11
            pos_hint: lb_tempcarc.pos_hint
            
        TempLabel:
            id: temperatura_carcaca
            text: '-.- °C'
            pos_hint:{'x':-0.456,'y':0.204}
        TempLabel:
            id:vel_motor_axial
            text: '-.-RPM'
            pos_hint:{'x':-0.457,'y':0.182}
        TempLabel:
            id:torque_motor_axial
            text: '-.-N.m'
            pos_hint:{'x':-0.457,'y':0.162} 
        TempLabel:
            id:temp_canAzul
            text: '-.- °C'
            pos_hint:{'x':-0.07,'y':0.148} 
        TempLabel:
            id:temp_canVermelho
            text: '-.-°C'
            pos_hint:{'x':-0.067,'y':-0.101} 
        TempLabel:
            id:pressao_canVerm
            text: '-.-psi'
            pos_hint:{'x':-0.166,'y':-0.10} 
        TempLabel:
            id:pressao_canAzul
            text: '-.-psi'
            pos_hint:{'x':-0.168,'y':0.15} 
        TempLabel:
            id:pressao_arEnt
            text: '-.-psi'
            pos_hint:{'x':-0.31,'y':0.37} 
           
        TempLabel:
            id:velocidade_arSaida
            text: '-.-m\s'
            pos_hint:{'x':0.333,'y':0.398}
        TempLabel:
            id:temperatura_arSaida
            text: '-.-°C'
            pos_hint:{'x':0.333,'y':0.378}
        TempLabel:
            id:vazao_arSaida
            text: '-.-m³\h'
            pos_hint:{'x':0.333,'y':0.358}

        Button:
            size_hint_x: None
            size_hint_y: None
            width: 50
            height: 50
            pos_hint:{'x':0.02,'y':0.8}
            background_color: 0.95,0.95,0.95
            background_normal: 'imgs/grafico.png'
            background_down: 'imgs/grafico.png'
            on_release: root._graficoMotorPopup.open()
        
        Button:
