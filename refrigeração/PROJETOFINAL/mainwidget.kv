#:kivy 2.3.1

<MainWidget>:
    orientation: 'vertical'
    canvas:
        Color:
            rgb: 0.3,0.3,0.3
        Rectangle:
            size: self.size
    BoxLayout:
        orientation:'horizontal'
        size_hint: (1,0.1)
        spacing: 10
        Label:
            text: 'SUPERVISÓRIO REFRIGERAÇÃO'
            size_hint_x: None
            width: 290        
        BoxLayout:
            orientation:'vertical'
            size_hint_x: None
            width: 390
            Label:
                text:'CONFIGURAÇÕES'
            BoxLayout:
                orientation:'horizontal'
                Button:
                    text:'MODBUS'
                    on_release: root._modbusPopup.open()
                Button:
                    text: 'ScanTime'
                    on_release: root._scanPopup.open()

        Image:
            id: img_con
            size_hint_x: None
            width: 100
            source: 'imgs/desconectado.png'
            pos_hint: {'top':1, 'right':1}

    FloatLayout:
        canvas:
            Color:
                rgb: 0.95,0.95,0.95
            Rectangle:
                size: self.size
        Image:
            source: 'imgs/Planta.png'
        TempLabel:
            id: temp_carc
            text: '-.-ºC'
            pos_hint:{'x':-0.45,'y':0.01}
        TempLabel:
            id:rot_mot
            text: '-.-RPM'
            pos_hint:{'x':0.125,'y':-0.01}
        TempLabel:
            id:freq_compr
            text: '-.-Hz'
            pos_hint:{'x':0.125,'y':-0.06} 
        TempLabel:
            id:velocidade_arSaida
            text: '-.-rpm'
            pos_hint:{'x':0.227,'y':-0.06} 

        BoxLayout:
            orientation:'horizontal'
            size_hint: (1,0.1)
            Button:
                text:'Motores'
                size_hint_x: None
                width: 160
                on_release: root._motoresPopup.open()
            Button:
                text:'Medidores'
                size_hint_x: None
                width: 160
                on_release: root._medidoresPopup.open()
            Button:
                text:'Gráficos'
                size_hint_x: None
                width: 160
                on_release: root._graficosPopup.open()
            Button:
                text:'Dados Históricos'
                size_hint_x: None
                width: 160
                on_release: root._dadosPopup.open()       
            Button:
                text:'Comandos'
                size_hint_x: None
                width: 160
                on_release: root._dadosPopup.open()




<TempLabel@Label>:
    font_size: 20
    bold: True
    halign: 'center'
    color: 0,0,0,1

