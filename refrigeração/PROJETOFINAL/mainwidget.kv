#:kivy 2.3.1

<MainWidget>:
    orientation: 'vertical'
    canvas:
        Color:
            rgb: 0.3,0.3,0.3
        Rectangle:
            size: self.size
    BoxLayout:
        orientation:'horizontal'
        size_hint: (1,0.1)
        spacing: 10
        Label:
            text: 'SUPERVISÓRIO REFRIGERAÇÃO'
            size_hint_x: None
            width: 280
        Button:
            text:'Medidores'
            size_hint_x: None
            width: 110
            on_release: root._medidoresPopup.open()
        BoxLayout:
            orientation:'vertical'
            size_hint_x: None
            width: 300
            Label:
                text:'CONFIGURAÇÕES'
            BoxLayout:
                orientation:'horizontal'
                Button:
                    text:'MODBUS'
                    on_release: root._modbusPopup.open()
                Button:
                    text: 'ScanTime'
                    on_release: root._scanPopup.open()

        Image:
            id: img_con
            size_hint_x: None
            width: 80
            source: 'imgs/desconectado.png'
            pos_hint: {'top':1, 'right':1}

    FloatLayout:
        canvas:
            Color:
                rgb: 0.95,0.95,0.95
            Rectangle:
                size: self.size
        Image:
            source: 'imgs/Planta.png'
        TempLabel:
            id: temp_carc
            text: '-.-ºC'
            pos_hint:{'x':-0.45,'y':0.01}
        TempLabel:
            id:cor_R
            text: '-.-A'
            pos_hint:{'x':0.125,'y':0.29}
        TempLabel:
            id:cor_S
            text: '-.-A'
            pos_hint:{'x':0.125,'y':0.24}
        TempLabel:
            id:cor_T
            text: '-.-A'
            pos_hint:{'x':0.125,'y':0.19}
        TempLabel:
            id:pot_ativ_t
            text: '-.-W'
            pos_hint:{'x':0.125,'y':0.14}
        TempLabel:
            id:pot_reatv_t
            text: '-.-VAr'
            pos_hint:{'x':0.125,'y':0.04}
        TempLabel:
            id:fator_pot
            text: '-.-'
            pos_hint:{'x':0.125,'y':0.09}
        TempLabel:
            id:rot_mot
            text: '-.-RPM'
            pos_hint:{'x':0.125,'y':-0.01}
        TempLabel:
            id:freq_compr
            text: '-.-Hz'
            pos_hint:{'x':0.125,'y':-0.06}    

<TempLabel@Label>:
    font_size: 20
    bold: True
    halign: 'center'
    color: 0,0,0,1

