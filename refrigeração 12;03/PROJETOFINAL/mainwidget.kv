#:kivy 2.3.1

<MainWidget>:
    orientation: 'vertical'
    canvas:
        Color:
            rgb: 0.3,0.3,0.3
        Rectangle:
            size: self.size
    BoxLayout:
        orientation:'horizontal'
        size_hint: (1,0.1)
        spacing: 10
        Label:
            text: 'SUPERVISÓRIO REFRIGERAÇÃO'
            size_hint_x: None
            width: 400        
        BoxLayout:
            orientation:'vertical'
            size_hint_x: None
            width: 500
            Label:
                text:'CONFIGURAÇÕES'
            BoxLayout:
                orientation:'horizontal'
                Button:
                    text:'MODBUS'
                    on_release: root._modbusPopup.open()
                Button:
                    text: 'ScanTime'
                    on_release: root._scanPopup.open()

        Image:
            id: img_con
            size_hint_x: None
            width: 100
            source: 'imgs/desconectado.png'
            pos_hint: {'top':1, 'right':1}

    FloatLayout:
        canvas:
            Color:
                rgb: 0.95,0.95,0.95
            Rectangle:
                size: self.size
        Image:
            source: 'imgs/Planta.png'
        TempLabel:
            id: temperatura_carcaca
            text: '-.- °C'
            pos_hint:{'x':-0.456,'y':0.204}
        TempLabel:
            id:vel_motor_axial
            text: '-.-RPM'
            pos_hint:{'x':-0.457,'y':0.182}
        TempLabel:
            id:torque_motor_axial
            text: '-.-N.m'
            pos_hint:{'x':-0.457,'y':0.162} 
        TempLabel:
            id:tit-01
            text: '-.- °C'
            pos_hint:{'x':-0.07,'y':0.148} 
        TempLabel:
            id:tit-02
            text: '-.-°C'
            pos_hint:{'x':-0.067,'y':-0.101} 
        TempLabel:
            id:pit-02
            text: '-.-psi'
            pos_hint:{'x':-0.166,'y':-0.10} 
        TempLabel:
            id:pit-01
            text: '-.-psi'
            pos_hint:{'x':-0.168,'y':0.15} 
        TempLabel:
            id:pit-03
            text: '-.-psi'
            pos_hint:{'x':-0.31,'y':0.37} 
           
        TempLabel:
            id:velocidade_arSaida
            text: '-.-m\s'
            pos_hint:{'x':0.333,'y':0.398} #mudar 
        TempLabel:
            id:temperatura_arSaida
            text: '-.-°C'
            pos_hint:{'x':0.333,'y':0.378} #mudar 
        TempLabel:
            id:vazao_arSaida
            text: '-.-m³\h'
            pos_hint:{'x':0.333,'y':0.358} #mudar 
        

        BoxLayout:
            orientation:'horizontal'
            size_hint: (1,0.1)
            Button:
                text:'Motores'
                size_hint_x: None
                width: 205
                on_release: root._motoresPopup.open()
            Button:
                text:'Medidores'
                size_hint_x: None
                width: 205
                on_release: root._medidoresPopup.open()
            Button:
                text:'Gráficos'
                size_hint_x: None
                width: 205
                on_release: root._graficosPopup.open()
            Button:
                text:'Dados Históricos'
                size_hint_x: None
                width: 205
                on_release: root._dadosPopup.open()       
            Button:
                text:'Comandos'
                size_hint_x: None
                width: 205
                on_release: root._dadosPopup.open()




<TempLabel@Label>:
    font_size: 13
    bold: True
    halign: 'center'
    color: 0,0,0,1

